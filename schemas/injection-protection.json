{
  "fields": [
    {
      "consumer": {
        "type": "foreign",
        "description": "Custom type for representing a foreign key with a null value allowed.",
        "reference": "consumers",
        "eq": null
      }
    },
    {
      "protocols": {
        "type": "set",
        "description": "A set of strings representing HTTP protocols.",
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ],
          "type": "string"
        },
        "required": true
      }
    },
    {
      "consumer_group": {
        "type": "foreign",
        "description": "Custom type for representing a foreign key with a null value allowed.",
        "reference": "consumer_groups",
        "eq": null
      }
    },
    {
      "config": {
        "entity_checks": [
          {
            "at_least_one_of": [
              "injection_types",
              "custom_injections"
            ]
          }
        ],
        "type": "record",
        "required": true,
        "fields": [
          {
            "injection_types": {
              "type": "set",
              "description": "The type of injections to check for.",
              "default": [
                "sql"
              ],
              "required": true,
              "elements": {
                "one_of": [
                  "sql",
                  "js",
                  "ssi",
                  "xpath_abbreviated",
                  "xpath_extended",
                  "java_exception"
                ],
                "type": "string"
              }
            }
          },
          {
            "locations": {
              "type": "set",
              "description": "The locations to check for injection.",
              "default": [
                "path_and_query"
              ],
              "required": true,
              "elements": {
                "one_of": [
                  "headers",
                  "path",
                  "query",
                  "path_and_query",
                  "body"
                ],
                "type": "string"
              }
            }
          },
          {
            "custom_injections": {
              "description": "Custom regexes to check for.",
              "type": "array",
              "elements": {
                "type": "record",
                "fields": [
                  {
                    "name": {
                      "type": "string",
                      "description": "A unique name for this injection.",
                      "required": true
                    }
                  },
                  {
                    "regex": {
                      "required": true,
                      "type": "string",
                      "description": "The regex to match against.",
                      "is_regex": true
                    }
                  }
                ]
              },
              "default": null
            }
          },
          {
            "enforcement_mode": {
              "one_of": [
                "block",
                "log_only"
              ],
              "type": "string",
              "description": "Enforcement mode of the security policy.",
              "default": "block",
              "required": true
            }
          },
          {
            "error_status_code": {
              "type": "integer",
              "description": "The response status code when validation fails.",
              "default": 400,
              "between": [
                400,
                499
              ],
              "required": true
            }
          },
          {
            "error_message": {
              "description": "The response message when validation fails",
              "type": "string",
              "required": true,
              "default": "Bad Request"
            }
          }
        ]
      }
    }
  ],
  "entity_checks": []
}