{
  "fields": [
    {
      "protocols": {
        "type": "set",
        "description": "A set of strings representing HTTP protocols.",
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ],
          "type": "string"
        },
        "required": true
      }
    },
    {
      "config": {
        "fields": [
          {
            "templates": {
              "elements": {
                "type": "record",
                "required": true,
                "fields": [
                  {
                    "name": {
                      "type": "string",
                      "description": "Unique name for the template, can be called with `{template://NAME}`",
                      "required": true
                    }
                  },
                  {
                    "template": {
                      "type": "string",
                      "description": "Template string for this request, supports mustache-style `{{placeholders}}`",
                      "required": true
                    }
                  }
                ]
              },
              "type": "array",
              "required": true,
              "description": "Array of templates available to the request context."
            }
          },
          {
            "allow_untemplated_requests": {
              "description": "Set true to allow requests that don't call or match any template.",
              "type": "boolean",
              "required": true,
              "default": true
            }
          },
          {
            "log_original_request": {
              "description": "Set true to add the original request to the Kong log plugin(s) output.",
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "max_request_body_size": {
              "gt": -1,
              "type": "integer",
              "description": "max allowed body size allowed to be introspected. 0 means unlimited, but the size of this body will still be limited by Nginx's client_max_body_size.",
              "default": 1048576
            }
          }
        ],
        "required": true,
        "type": "record"
      }
    }
  ],
  "entity_checks": []
}