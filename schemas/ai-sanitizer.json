{
  "fields": [
    {
      "protocols": {
        "type": "set",
        "description": "A set of strings representing HTTP protocols.",
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ],
          "type": "string"
        },
        "required": true
      }
    },
    {
      "config": {
        "fields": [
          {
            "host": {
              "required": true,
              "type": "string",
              "description": "The host of the sanitizer",
              "default": "localhost"
            }
          },
          {
            "port": {
              "required": true,
              "type": "number",
              "description": "The port of the sanitizer",
              "default": 8080
            }
          },
          {
            "scheme": {
              "required": true,
              "type": "string",
              "description": "The protocol can be http and https",
              "default": "http"
            }
          },
          {
            "timeout": {
              "type": "number",
              "description": "Connection timeout with the sanitizer",
              "default": 10000
            }
          },
          {
            "keepalive_timeout": {
              "type": "number",
              "description": "The keepalive timeout for the established http connnection",
              "default": 60000
            }
          },
          {
            "sanitization_mode": {
              "one_of": [
                "INPUT",
                "OUTPUT",
                "BOTH"
              ],
              "type": "string",
              "description": "The sanitization mode to use for the request",
              "default": "INPUT",
              "required": true
            }
          },
          {
            "stop_on_error": {
              "type": "boolean",
              "description": "Stop processing if an error occurs.",
              "default": true
            }
          },
          {
            "anonymize": {
              "type": "array",
              "description": "List of types to be anonymized",
              "default": [
                "all_and_credentials"
              ],
              "required": true,
              "elements": {
                "one_of": [
                  "general",
                  "phone",
                  "email",
                  "creditcard",
                  "crypto",
                  "date",
                  "ssn",
                  "ip",
                  "nrp",
                  "domain",
                  "credentials",
                  "url",
                  "medical",
                  "driverlicense",
                  "passport",
                  "bank",
                  "nationalid",
                  "custom",
                  "all",
                  "all_and_credentials"
                ],
                "type": "string"
              }
            }
          },
          {
            "recover_redacted": {
              "type": "boolean",
              "description": "Whether to recover redacted data. This doesn't apply to the redacted output.",
              "default": true
            }
          },
          {
            "block_if_detected": {
              "type": "boolean",
              "description": "Whether to block requests containing PII data",
              "default": false
            }
          },
          {
            "redact_type": {
              "one_of": [
                "placeholder",
                "synthetic"
              ],
              "type": "string",
              "description": "What value to be used to redacted to",
              "default": "placeholder"
            }
          },
          {
            "custom_patterns": {
              "type": "array",
              "description": "List of custom patterns to be used for anonymization",
              "len_min": 1,
              "required": false,
              "elements": {
                "type": "record",
                "fields": [
                  {
                    "name": {
                      "required": true,
                      "type": "string"
                    }
                  },
                  {
                    "regex": {
                      "required": true,
                      "type": "string"
                    }
                  },
                  {
                    "score": {
                      "between": [
                        0,
                        1
                      ],
                      "type": "number",
                      "required": true,
                      "default": 0.5
                    }
                  }
                ]
              }
            }
          },
          {
            "skip_logging_sanitized_items": {
              "type": "boolean",
              "description": "Whether to log sanitized items in the Kong log plugins. Turn it on if you want to hide sensitive data from logs.",
              "default": false
            }
          }
        ],
        "required": true,
        "type": "record"
      }
    }
  ],
  "entity_checks": [
    {
      "custom_entity_check": {
        "field_sources": [
          "config"
        ]
      }
    }
  ]
}