{
  "fields": [
    {
      "protocols": {
        "type": "set",
        "description": "A set of strings representing HTTP protocols.",
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ],
          "type": "string"
        },
        "required": true
      }
    },
    {
      "config": {
        "fields": [
          {
            "prompts": {
              "type": "record",
              "required": false,
              "fields": [
                {
                  "prepend": {
                    "type": "array",
                    "description": "Insert chat messages at the beginning of the chat message array. This array preserves exact order when adding messages.",
                    "len_max": 15,
                    "required": false,
                    "elements": {
                      "type": "record",
                      "required": false,
                      "fields": [
                        {
                          "role": {
                            "one_of": [
                              "system",
                              "assistant",
                              "user"
                            ],
                            "type": "string",
                            "required": true,
                            "default": "system"
                          }
                        },
                        {
                          "content": {
                            "len_max": 100000,
                            "type": "string",
                            "required": true,
                            "len_min": 1
                          }
                        }
                      ]
                    }
                  }
                },
                {
                  "append": {
                    "type": "array",
                    "description": "Insert chat messages at the end of the chat message array. This array preserves exact order when adding messages.",
                    "len_max": 15,
                    "required": false,
                    "elements": {
                      "type": "record",
                      "required": false,
                      "fields": [
                        {
                          "role": {
                            "one_of": [
                              "system",
                              "assistant",
                              "user"
                            ],
                            "type": "string",
                            "required": true,
                            "default": "system"
                          }
                        },
                        {
                          "content": {
                            "len_max": 100000,
                            "type": "string",
                            "required": true,
                            "len_min": 1
                          }
                        }
                      ]
                    }
                  }
                }
              ]
            }
          },
          {
            "max_request_body_size": {
              "gt": -1,
              "type": "integer",
              "description": "max allowed body size allowed to be introspected. 0 means unlimited, but the size of this body will still be limited by Nginx's client_max_body_size.",
              "default": 1048576
            }
          },
          {
            "llm_format": {
              "one_of": [
                "openai",
                "bedrock",
                "gemini",
                "cohere",
                "huggingface",
                "anthropic"
              ],
              "type": "string",
              "description": "LLM input and output format and schema to use",
              "default": "openai",
              "required": false
            }
          }
        ],
        "required": true,
        "type": "record"
      }
    }
  ],
  "entity_checks": [
    {
      "at_least_one_of": [
        "config.prompts.prepend",
        "config.prompts.append"
      ]
    }
  ]
}